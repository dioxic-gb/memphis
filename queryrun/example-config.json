{
  "mongoUri": "127.0.0.1",
  "database": "comfone",
  "collection": {
    "name": "batch",
    "writeConcern": {
      "w": 0,
      "journal": false
    },
    "readConcern": "majority",
    "readPreference": "nearest"
  },
  "tests": [
    {
      "name": "test1",
      "stages": [
        {
          "name": "insert some stuff",
          "operation": {
            "type": "insertMany",
            "threads": 1,
            "totalDocuments": 200,
            "batchSize": 100,
            "options": {
              "ordered": false,
              "bypassDocumentValidation": true
            },
            "templates": [
              {
                "templateFile": "templates/etdrs.json",
                "placeholderFile": "example-placeholders.json",
                "weighting": 10
              }
            ]
          }
        },
        {
          "name": "find some stuff",
          "operation": {
            "type": "find",
            "iterations": 0,
            "templates": [
              {
                "templateFile": "queries/test.json",
                "placeholderFile": "example-placeholders.json"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "test2",
      "stages": [
        {
          "name": "insert some stuff",
          "operation": {
            "type": "insertMany",
            "threads": 10,
